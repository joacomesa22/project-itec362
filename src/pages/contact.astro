---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Contact - L10">
    <section
    class="contactBg flex justify-center items-center py-16 px-4 gap-8 h-screen"
    >
        <div class="flex w-full justify-center items-start flex-wrap gap-16 max-w-screen-xl">
            <div class="w-full max-w-[400px] hero-text-shadow">
                <h1 class="mb-6 text-5xl lg:text-7xl font-bold ">contact</h1>
                <p class="mb-6">
                    Want to know more or schedule a visit? We're here to help and make sure you get all the info you need.
                </p>
                <div class="flex flex-col">
                    <p class="mb-2">Buenos Aires, Argentina</p>
                    <p class="mb-2">+54 11 1273 8922</p>
                    <p class="mb-2 "
                    >wayra@gmail.com</p
                    >
                </div>
            </div>
            <form class="flex flex-col gap-4 w-full max-w-[400px]">
                <div class="flex flex-col gap-2">
                    <div class="mb-2 flex flex-col">
                        <label for="name">Full Name </label>
                        <input
                        type="text"
                        class="bg-white text-black p-2"
                        id="name"
                        name="name"
                        required
                        />
                    </div>
                    <div class="mb-2 flex flex-col">
                        <label for="email">Email </label>
                        <input
                        type="email"
                        class="bg-white text-black p-3"
                        id="email"
                        name="email"
                        required
                        />
                    </div>
                    <div class="mb-6 flex flex-col">
                        <label for="message" >Message</label>
                        <textarea
                        class="bg-white resize-none text-black p-3"
                        id="message"
                        rows="3"
                        name="message"
                        required
                        ></textarea>
                    </div>
                </div>
                <button
                type="submit"
                 class="text-center p-4 border-2 hover:backdrop-blur-md duration-300 w-full"
                >
                SUBMIT
                </button>
            </form>
        </div>
    </sectio>
</Layout>

<style>
    .contactBg {
    background-image: linear-gradient(0deg, rgba(0,0,0,0.5), rgba(0,0,0, 0.5)), url(/images/gym.avif);
    background-size: cover;
}
</style>