---
interface Props {
    white?: boolean;
    heading: string;
    title?: string;
    text: string;
    class?: string;
}
const {white = false, heading, title, text, class: className} = Astro.props
---
<section class:list={[`text-balance flex flex-col md:flex-row justify-center items-center ${white ? "text-[var(--white)]" : "text-[var(--black)]"} py-24`, className]}>
    <div class="content-wrapper w-full grid md:grid-cols-2 justify-items-start">
            <div class="flex items-center gap-2 w-full max-w-[500px]">
                {white ? <img src="/images/circulo-white.svg" alt="circulo logo" class="max-w-[100px]"> : <img src="/images/circulo.svg" alt="circulo logo" class="max-w-[100px]">}
                <h2 class="text-3xl md:text-5xl">{heading}</h2>
            </div>
        <div class="max-w-[600px] flex flex-col justify-center items-start gap-6 mt-4">
            <div class="flex flex-col justify-end gap-2">
                {title && <h2 class="text-2xl md:text-4xl leading-snug pt-3">{title}</h2> }
                <p>{text}</p>
            </div>
            <slot/>
        </div>
    </div>
</section>